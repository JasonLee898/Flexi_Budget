<?xml version="1.0" encoding="utf-8"?>


<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Personal_Profile">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:background="#79DC83"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/summary_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:layout_margin="15dp"
                app:srcCompat="@drawable/menu_icon" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="67dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Summary"
                android:textColor="#000"
                android:textSize="28dp"
                android:textStyle="bold" />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewGraph"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:elevation="10dp"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="2">

                <org.eazegraph.lib.charts.PieChart
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/piechart"
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:layout_weight="2"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="15dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical">

                        <View
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@color/Saving" />

                        <TextView
                            android:layout_width="75dp"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:textStyle="bold"
                            android:text="Saving" />

                        <TextView
                            android:id="@+id/tvSaving"
                            android:layout_width="75dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:fontFamily="sans-serif-light"
                            android:text="0"
                            android:textAlignment="textEnd"
                            android:paddingRight="10dp"
                            android:textColor="@color/color_one"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="5dp">

                        <View
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@color/Food" />

                        <TextView
                            android:layout_width="75dp"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:textStyle="bold"
                            android:text="Food" />

                        <TextView
                            android:id="@+id/tvFood"
                            android:layout_width="75dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:fontFamily="sans-serif-light"
                            android:text="0"
                            android:textAlignment="textEnd"
                            android:textColor="@color/color_one"
                            android:textSize="18sp"
                            android:paddingRight="10dp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="5dp">

                        <View
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@color/Travel" />

                        <TextView
                            android:layout_width="75dp"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:textStyle="bold"
                            android:text="Travel" />

                        <TextView
                            android:id="@+id/tvTravel"
                            android:layout_width="75dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:fontFamily="sans-serif-light"
                            android:text="0"
                            android:textAlignment="textEnd"
                            android:textColor="@color/color_one"
                            android:textSize="18sp"
                            android:paddingRight="10dp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="5dp">

                        <View
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@color/Improve" />

                        <TextView
                            android:layout_width="75dp"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:textStyle="bold"
                            android:text="Improve" />

                        <TextView
                            android:id="@+id/tvImprove"
                            android:layout_width="75dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:fontFamily="sans-serif-light"
                            android:text="0"
                            android:textAlignment="textEnd"
                            android:textColor="@color/color_one"
                            android:paddingRight="10dp"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="5dp">

                        <View
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@color/Insurance" />

                        <TextView
                            android:layout_width="75dp"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:textStyle="bold"
                            android:text="Insurance" />

                        <TextView
                            android:id="@+id/tvInsurance"
                            android:layout_width="75dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:fontFamily="sans-serif-light"
                            android:text="0"
                            android:textAlignment="textEnd"
                            android:textColor="@color/color_one"
                            android:textSize="18sp"
                            android:paddingRight="10dp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="5dp">

                        <View
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@color/Free" />

                        <TextView
                            android:layout_width="75dp"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:textStyle="bold"
                            android:text="Free" />

                        <TextView
                            android:id="@+id/tvFree"
                            android:layout_width="75dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:fontFamily="sans-serif-light"
                            android:text="0"
                            android:textAlignment="textEnd"
                            android:textColor="@color/color_one"
                            android:textSize="18sp"
                            android:paddingRight="10dp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/summary_total_income_label"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginRight="20dp"
                android:textStyle="bold"
                android:text="Total Income" />

            <TextView
                android:id="@+id/summary_total_expense_label"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:textStyle="bold"
                android:text="Total Expense" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/summary_total_income"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="#79FF83"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:textColor="#000"
                android:layout_marginBottom="10dp"
                android:text="000" />

            <TextView
                android:id="@+id/summary_total_expense"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="#FF4137"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:textColor="#000"
                android:text="000" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:background="#79DC83"
            android:gravity="center"
            android:text="Envelope"
            android:textColor="#000"
            android:textSize="28dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/summary_saving_label"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textStyle="bold"
                android:text="Saving" />

            <TextView
                android:id="@+id/summary_saving_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#79FF83"
                android:layout_margin="10dp"
                android:gravity="center"
                android:textColor="#000"
                android:text="000" />

            <TextView
                android:id="@+id/summary_food_label"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textStyle="bold"
                android:text="Food" />

            <TextView
                android:id="@+id/summary_food_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:background="#79FF83"
                android:gravity="center"
                android:textColor="#000"
                android:text="000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/summary_travel_label"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textStyle="bold"
                android:text="Travel" />

            <TextView
                android:id="@+id/summary_travel_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="#79FF83"
                android:textColor="#000"
                android:gravity="center"
                android:text="000" />

            <TextView
                android:id="@+id/summary_improve_label"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textStyle="bold"
                android:text="Improve" />

            <TextView
                android:id="@+id/summary_improve_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:background="#79FF83"
                android:gravity="center"
                android:textColor="#000"
                android:text="000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/summary_insurance_label"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textStyle="bold"
                android:text="Insurance" />

            <TextView
                android:id="@+id/summary_insurance_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#79FF83"
                android:layout_margin="10dp"
                android:gravity="center"
                android:textColor="#000"
                android:text="000" />

            <TextView
                android:id="@+id/summary_free_label"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textStyle="bold"
                android:text="Food" />

            <TextView
                android:id="@+id/summary_free_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:background="#79FF83"
                android:gravity="center"
                android:textColor="#000"
                android:text="000" />
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/white">

        <include
            layout="@layout/menu_page"/>
    </RelativeLayout>
</androidx.drawerlayout.widget.DrawerLayout>