<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="315dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#E5FDD1"
    android:layout_gravity="center"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">


        <Spinner
            android:id="@+id/expensespinner"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_margin="20dp"
            android:background="#FFFFFF"
            android:entries="@array/items"
            />

        <EditText
            android:id="@+id/expenselist_amount"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_margin="20dp"
            android:background="#FFFFFF"
            android:hint="   Amount"
            android:inputType="textPersonName"
            android:textColor="#000"
            android:textColorHint="#D9D9D9"
            android:textSize="20sp" />
        <EditText
            android:id="@+id/expenselist_note"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_margin="20dp"
            android:background="#FFFFFF"
            android:hint="   Note"
            android:inputType="textPersonName"
            android:textColor="#000"
            android:textColorHint="#D9D9D9"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/expenselist_cancelbutton"
                android:layout_width="90dp"
                android:layout_height="35dp"
                android:background="#52A447"
                android:text="Cancel"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:layout_margin="20dp"
                android:textSize="18sp" />

            <Button
                android:id="@+id/expenselist_savebutton"
                android:layout_width="90dp"
                android:layout_height="35dp"
                android:layout_margin="20dp"
                android:background="#52A447"
                android:text="Create"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="18sp" />

        </LinearLayout>

    </LinearLayout>
</FrameLayout>