<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".Insurance_Envelope_Review">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:background="#79DC83"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/insurance_backbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:layout_margin="15dp"
            app:srcCompat="?attr/actionModeCloseDrawable" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="67dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"
            android:text="Insurance"
            android:textColor="#000"
            android:textSize="28dp"
            android:textStyle="bold" />
    </LinearLayout>

    <Button
        android:id="@+id/insurance_budget_editbutton"
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:background="#52A447"
        android:text="Edit"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:layout_gravity="right"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:gravity="center">

        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:background="#FCFC5C">

            <TextView
                android:id="@+id/insurance_budget_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="   Budget:  "
                android:gravity="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/insurance_budget_amount"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="0"
                android:textColor="#000"
                android:gravity="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:background="#79FF83">

            <TextView
                android:id="@+id/insurance_remaining_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="   Remaining:  "
                android:gravity="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/insurance_remaining_amount"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="0"
                android:textColor="#000"
                android:gravity="center" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:background="#79DC83"
        android:gravity="center"
        android:text="   Goal"
        android:textColor="#000"
        android:textSize="28dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/insurance_goal_editbutton"
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:background="#52A447"
        android:text="Add"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:layout_gravity="right"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/insurance_Goal"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:paddingLeft="10dp"
            android:text="Default Goal" />

        <ProgressBar
            android:id="@+id/insurance_remaining_progress"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginRight="20dp"
            android:progress="0"
            android:max="100"
            style="@android:style/Widget.ProgressBar.Horizontal" />

    </LinearLayout>

</LinearLayout>