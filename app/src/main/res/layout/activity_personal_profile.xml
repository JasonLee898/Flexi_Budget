<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Personal_Profile">
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        tools:context=".Personal_Profile">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:background="@drawable/background"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="67dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/hamburger"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:layout_margin="15dp"
                    app:srcCompat="@drawable/menu_icon" />

                <TextView
                    android:id="@+id/personal_profile_text"
                    android:layout_width="0dp"
                    android:layout_height="67dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Personal Profile"
                    android:textColor="#000"
                    android:textSize="28dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <ImageView
                android:id="@+id/personal_profil_pic"
                android:layout_width="166dp"
                android:layout_height="164dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:src="@drawable/profile"
                app:strokeColor="@null" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="40dp">

                <LinearLayout
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/name_label"
                        android:layout_width="76dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="70dp"
                        android:text="Name : "
                        android:textColor="#000"
                        android:textColorHint="#000"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/personal_profile_name"
                        android:layout_width="225dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="70dp"

                        android:textColor="#000"
                        android:text=""
                        android:textSize="20sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_marginTop="30dp">

                    <TextView
                        android:id="@+id/email_label"
                        android:layout_width="76dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="70dp"
                        android:text="Email : "
                        android:textColor="#000"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/personal_profile_email"
                        android:layout_width="225dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="70dp"
                        android:textColor="#000"
                        android:text=""
                        android:textSize="20sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_marginTop="30dp">

                    <TextView
                        android:id="@+id/ph_label"
                        android:layout_width="76dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="70dp"
                        android:text="P/L     : "
                        android:textColor="#000"
                        android:textColorHint="#000"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/personal_profile_phonenumber"
                        android:layout_width="225dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="70dp"

                        android:textColor="#000"
                        android:text=""
                        android:textSize="20sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/personal_profile_editbutton"
                        android:layout_width="90dp"
                        android:layout_height="35dp"
                        android:background="#52A447"
                        android:text="Edit"
                        android:textAllCaps="false"
                        android:textColor="#fff"
                        android:layout_gravity="right"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:textSize="18sp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>


    //menu
    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/white">

        <include
            layout="@layout/menu_page"/>
    </RelativeLayout>


</androidx.drawerlayout.widget.DrawerLayout>