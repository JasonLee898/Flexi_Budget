<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="315dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#E5FDD1"
    android:layout_gravity="center"
    tools:context=".Food_Goal_Update">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/food_goal_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Goal Update"
            android:textColor="#000"
            android:textSize="29sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/food_goal_update_name"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_margin="15dp"
            android:layout_marginTop="40dp"
            android:background="#FFFFFF"
            android:hint="Goal Name"
            android:paddingLeft="15dp"
            android:inputType="textPersonName"
            android:textColor="#000"
            android:textColorHint="#D9D9D9"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/food_goal_update_amount"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:background="#FFFFFF"
            android:hint="Amount"
            android:paddingLeft="15dp"
            android:inputType="textPersonName"
            android:textColor="#000"
            android:textColorHint="#D9D9D9"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/food_goal_update_cancelbutton"
                android:layout_width="90dp"
                android:layout_height="35dp"
                android:background="#00C04B"
                android:text="Cancel"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:layout_margin="20dp"
                android:textSize="18sp" />

            <Button
                android:id="@+id/food_goal_update_createbutton"
                android:layout_width="90dp"
                android:layout_height="35dp"
                android:layout_margin="20dp"
                android:background="#00C04B"
                android:text="Save"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="18sp" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>